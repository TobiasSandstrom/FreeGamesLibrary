<MudItem xs="12" xl="12">
    <MudPaper Elevation="5" @onclick="() => NavigateToGameDetailed(game.Id)" Class="pa-4 d-flex flex-row align-items-center" style="min-width:100%; background-color: var(--mud-palette-tertiary); cursor:pointer;">
        <div class="ListViewImageContainer">
            <MudImage class="ListViewImage" Src="@game.Thumbnail"></MudImage>
            <div class="zoomed-container">
                <img class="zoomed-image" src="@game.Thumbnail" />
            </div>
        </div>

        <div class="d-flex flex-column pl-4">
            <MudText Typo="Typo.h6" Color="Color.Secondary" Class="mb-2">@game.Title</MudText>
            <div class=" w-100">
                <MudText Typo="Typo.body2" Color="Color.Secondary">@game.Short_Description)</MudText>
            </div>
            <div class="mt-2 d-flex justify-start">
                <MudChip Style="font-size:12px;" T="string" Color="Color.Secondary">@game.Genre</MudChip>
                <div style="display:flex; align-items:center; margin:0;">
                    @foreach (var platform in game.Platform)
                    {
                        <MudIcon Color="Color.Primary" Class="ml-2" Icon="@(platform == "PC (Windows)" ? Icons.Custom.Brands.MicrosoftWindows : @Icons.Custom.Brands.Chrome)"></MudIcon>
                    }
                </div>
            </div>

        </div>

    </MudPaper>

</MudItem>

@code {
    [Parameter]
    public GameSimpleDisplayModel game { get; set; } = new();

    private void NavigateToGameDetailed(int gameId)
    {
        NavigationManager.NavigateTo($"/game-details/{gameId}");
    }
}
