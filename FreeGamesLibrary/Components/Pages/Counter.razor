@page "/counter"
@using FreeGamesLibrary.Store.CounterState
@using FreeGamesLibrary.Store;
@using FreeGamesLibrary.Store.UiUseState
@rendermode InteractiveServer
@inherits Fluxor.Blazor.Web.Components.FluxorComponent
@inject IState<CounterState> counterState
@inject IDispatcher dispatcher
<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<MudText role="status">Current count: @counterState.Value.Counter</MudText>

<button class="btn btn-primary" @onclick="IncrementCount">Increment Counter</button>

@code {

    private void IncrementCount()
    {
        dispatcher.Dispatch(new IncrementCounterAction(counterState.Value.Counter));
    }
}
